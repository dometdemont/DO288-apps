pipeline {
    options {
        // set a timeout of 30 minutes for this pipeline
        timeout(time: 30, unit: 'MINUTES')
    }
    agent {
      node {
        label 'master'
      }
    }

    stages {

        stage('stage 1') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject() {
                                echo "stage 1: using project: ${openshift.project()} in cluster ${openshift.cluster()}"
                        }
                    }
                }
            }
        }

    stage('stage 2') {
			steps {
				sh 'echo hello from stage 2!'
				}
			}

        stage('Default session is empty') {
            steps {
                sh '[[ "$(curl http://assistant-mad-also.2886795316-80-host17nc.environments.katacoda.com/hpe5g.html)" == "[]" ]]'
            }
        }
    }
    
    stage('manual approval') {
			steps {
				timeout(time: 60, unit: 'MINUTES') {
				input message: "Confirm success?"
				}
			}
		}

}
